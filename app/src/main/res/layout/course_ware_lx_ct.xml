<?xml version="1.0" encoding="utf-8"?>
<!--  错题库首页面     -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="#fff"
    android:orientation="vertical" >
    
    <!-- 顶部 -->
     <RelativeLayout 
         android:id="@+id/ct_rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
        >
         <TextView
             android:id="@+id/ct_retrun"
             android:onClick="click"
             android:text="@string/icon_back"
             android:textColor="@color/color_white"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:minWidth="44dp"
             android:gravity="center"
             android:minHeight="44dp"
             />
        <TextView 
            android:layout_toRightOf="@id/ct_retrun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="错题集"
            android:gravity="center"
            android:textColor="#fff"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ct_iv_del"
            android:onClick="click"  
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/del"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#81c3f7">
        <TextView 
			android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerInParent="true"
	        android:text=" 只有可移除的错题才可以移除"
	        android:drawableLeft="@drawable/laba24"
	        android:textColor="#fff"/>
    </RelativeLayout>
     <!-- 全部错题入口 -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
android:background="@color/colorPrimary"
android:gravity="center"
        android:padding="15dp"
        >
<RelativeLayout
android:id="@+id/ct_iv"
            android:layout_height="130dp"
            android:layout_width="130dp"
            android:background="@drawable/iv200"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
>
<TextView
android:id="@+id/ct_tvsum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:text="全部错题"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
/>
<TextView
android:id="@+id/ct_tvcount"
android:layout_below="@id/ct_tvsum"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:textSize="22sp"
                android:text="1000"
                android:layout_centerHorizontal="true"
/>
</RelativeLayout>
        <Button
            android:id="@+id/ct_do"
            android:layout_below="@id/ct_iv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textColor="@color/colorPrimary"
            android:onClick="click"
            android:background="@drawable/shape3"
            android:layout_centerHorizontal="true"
            android:text="我要练习"/>

    </RelativeLayout>

