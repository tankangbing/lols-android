<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/alertmsgMain"
              style="@style/app_exit_layout"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/dialog_behavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="当前行为："
            android:textColor="#333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dialog_behavior_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="5dp"
            android:textColor="#333"
            android:lineSpacingExtra="2dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.50">
        <TextView
            android:id="@+id/dialog_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="进        度："
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dialog_progress_tv"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#333"
            android:lineSpacingExtra="2dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="活动节点："
            android:textColor="#333"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/dialog_node_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="5dp"
            android:textColor="#333"
            android:lineSpacingExtra="2dp"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/dialog_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="学习节点："
        android:textColor="#333"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/dialog_parent_tv"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:text=""
            android:textColor="#333"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>