<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/l1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/shadow_133248">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/small_textSize"
                android:textColor="@color/color_999999"
                android:text="@string/from_str"/>
            <TextView
                android:id="@+id/chapter_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/small_textSize"
                android:textColor="@color/color_999999" />
        </LinearLayout>

        <TextView
            android:id="@+id/topic_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/middle_textSize"
            android:textColor="@color/color_333333"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/topic_conten_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/small_textSize"
            android:textColor="@color/color_333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"
                    android:text="@string/questioner"/>
                <TextView
                    android:id="@+id/questioner_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999" />
            </LinearLayout>

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/divider_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"
                    android:text="@string/question_time"/>
                <TextView
                    android:id="@+id/question_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/answer_num_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/small_textSize"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/small_textSize"
                android:textColor="@color/colorPrimary"
                android:text="@string/answer_num_str"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/shadow_133248">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_avatar_bg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src ="@drawable/touxiang"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_avatar_bg"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/small_textSize"
                    android:textColor="@color/color_333333" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/floor_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/extra_small_textSize"
                        android:textColor="@color/color_999999"  />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/extra_small_textSize"
                        android:textColor="@color/color_999999"
                        android:text="F"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/answer_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/small_textSize"
                android:textColor="@color/color_999999"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/answer_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/middle_textSize"
            android:textColor="@color/color_333333"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="@color/divider_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/goodview_ly"
                android:layout_width="90dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/good_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:text="@string/icon_good"
                    style="@style/extra_large_textSize" />
                <TextView
                    android:id="@+id/good_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/good_bg"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"
                    android:text="100"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/badview_ly"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/goodview_ly"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bad_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:text="@string/icon_bad"
                    style="@style/extra_large_textSize"/>
                <TextView
                    android:id="@+id/bad_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bad_bg"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"
                    android:text="100"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/commentview_ly"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/comment_bg"
                    android:layout_centerVertical="true"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"/>
                <TextView
                    android:id="@+id/comment_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_999999"
                    android:text="@string/icon_comment"
                    style="@style/extra_large_textSize"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>