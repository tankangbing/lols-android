<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/total_content"
    android:orientation="vertical"
    android:name=".MainActivity">
   <TextView
       android:id="@+id/toolbar_status"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorPrimary"
       android:visibility="gone"/>

   <RelativeLayout
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/colorPrimary"
       android:paddingLeft="5dp"
       android:paddingRight="5dp">

      <TextView
          android:id="@+id/toolbar_back"
          style="@style/large_textSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="5dp"
          android:gravity="center"
          android:minHeight="44dp"
          android:minWidth="44dp"
          android:text="@string/icon_back"
          android:textColor="@color/color_white"
          android:visibility="gone" />

      <TextView
          android:id="@+id/toolbar_left_tv"
          style="@style/large_textSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="2dp"
          android:layout_marginRight="2dp"
          android:layout_toLeftOf="@+id/toolbar_right2"
          android:layout_toRightOf="@+id/toolbar_back"
          android:ellipsize="end"
          android:singleLine="true"
          android:text="登录"
          android:textColor="@color/text_white"
          android:visibility="gone" />

      <TextView
          android:id="@+id/toolbar_right2"
          style="@style/large_textSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:gravity="center"
          android:minHeight="44dp"
          android:minWidth="44dp"
          android:textColor="@color/text_white"
          android:visibility="gone" />

      <TextView
          android:id="@+id/toolbar_right"
          style="@style/large_textSize"
          android:layout_toLeftOf="@+id/toolbar_right2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:gravity="center"
          android:minHeight="44dp"
          android:minWidth="44dp"
          android:textColor="@color/text_white"
          android:visibility="gone" />
   </RelativeLayout>

   <LinearLayout
       android:id="@+id/layout_center"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" />

</LinearLayout>

