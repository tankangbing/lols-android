<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#e0eef7"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <LinearLayout
            android:id="@+id/task_item_click"
            android:orientation="vertical"
            android:onClick="click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/task_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="世界上赞成马克思主义的人会多起来"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/task_item_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#f73636"
                    android:text="未提交"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000"/>
            <TextView
                android:id="@+id/task_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="作业日期：2016-01-01至2016-08-01"
                android:textColor="#4F4F4F"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/task_item_fbz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布者：--"
                android:textColor="#4F4F4F"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/task_item_fbsj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布时间：2017-01-01"
                android:textColor="#4F4F4F"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/task_item_df"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="得分：--"
                android:textColor="#4F4F4F"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/task_item_msclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#36baf7"
                android:text="描述>>"/>

            <TextView
                android:id="@+id/task_item_ms"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="#4F4F4F"
                android:text="文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签文本标签"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>