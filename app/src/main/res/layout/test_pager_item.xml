<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="fill_parent"
android:layout_marginBottom="50dp"
android:id="@+id/test_sv"
android:background="#eaeaea" >
<LinearLayout
    android:id="@+id/test_ll_con"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:padding="5sp">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/pq_nr"
            android:layout_width="wrap_content"
            android:textColor="#5b5b5b"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.5"
            android:layout_height="wrap_content"
            android:text=""/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/test_ll_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <com.example.view.NoScrollListView
        android:id="@+id/cw_test_lv_xx"
        android:divider="#bab8b8"
        android:dividerHeight="0px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:fastScrollEnabled="false"
        android:listSelector="@android:color/transparent"
        android:paddingTop="10sp"
        ></com.example.view.NoScrollListView>
    <!--<LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/test_btn_tj"
            android:layout_width="wrap_content"
                    android:textColor="#fff"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="click"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape"
            android:text="提交" />
    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/test_ll_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="15sp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/test_ll_da"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:text="答案"/>
            <TextView
                android:id="@+id/test_tv_da"
                android:layout_width="wrap_content"
                android:textColor="#7b7b7b"
                android:layout_height="wrap_content"
                android:text="略"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:text="解析"/>
            <TextView
                android:id="@+id/test_tv_jx"
                android:layout_width="wrap_content"
                android:textColor="#7b7b7b"
                android:layout_height="wrap_content"
                android:text="略"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                android:text="知识点"/>
            <TextView
                android:id="@+id/test_tv_zsd"
                android:layout_width="wrap_content"
                android:textColor="#7b7b7b"
                android:layout_height="wrap_content"
                android:text="相关知识点"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
